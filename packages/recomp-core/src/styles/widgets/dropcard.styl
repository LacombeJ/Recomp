@import '../common/colors';

recomp-dropcard() {

  .recomp-dropcard {
    BG_COLOR = desaturate(RECOMP_PRIMARY, 60%);
    BG_COLOR = RECOMP_PRIMARY;
    HOVER_COLOR = lighten(BG_COLOR, 10%);
    INNER_COLOR = darken(BG_COLOR, 30%);
    background-color: BG_COLOR;
    TX = .3s cubic-bezier(0.645,0.045,0.355,1)
    border-radius: 2px;
    box-shadow: 0px 2px 4px 1px rgba(0, 0, 0, 0.2);
    transition: background-color TX, box-shadow TX;
    display: flex;
    flex-direction: column;
    min-width 180px;
    &.hover {
      background-color: HOVER_COLOR;
      box-shadow: 0px 4px 8px 2px rgba(0, 0, 0, 0.4);
    }
    .head {
      user-select: none;
      height: 60px;
      display: flex;
      .icon {
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: 60px;
      }
      .label {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        overflow: hidden;
        .title {
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-size: 18px;
          font-weight: 200;
          color: rgba(white, 0.9);
        }
        .subtitle {
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-size: 12px;
          font-weight: 400;
          color: rgba(white, 0.6);
        }
      }
      .control {
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: 60px;
      }
    }
    .body {
      margin: 4px;
      padding: 8px;
      box-shadow: inset 0px 2px 4px 1px rgba(0, 0, 0, 0.2);
      background-color: INNER_COLOR;
    }
  }

}