recomp-overlay() {

  .recomp-overlay {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0;
    right: 0;
    z-index: 100;
    &.tint {
      background-color: rgba(black, 0.5);
    }
    &.blur {
      backdrop-filter: blur(4px);
    }

    .inner {
      padding-top: 28px;
      .container {
        position: fixed;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }
}