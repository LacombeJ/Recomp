recomp-list() {

  V0 = 20%; // desaturateion value
  V1 = 70%; // lighten value

  .recomp-list {
    margin: 0;
    padding: 0 0 0 28px;
  }

  .recomp-list-item {
    &.level-1 {
      color: lighten(desaturate(RECOMP_LEVEL_1, V0), V1);
    }
    &.level-2 {
      color: lighten(desaturate(RECOMP_LEVEL_2, V0), V1);
    }
    &.level-3 {
      color: lighten(desaturate(RECOMP_LEVEL_3, V0), V1);
    }
  }

  .recomp-listitemcontent {
    position: absolute;
    transform: translateX(-25%) translateX(-17px);
  }

}