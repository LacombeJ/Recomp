recomp-form() {

  .recomp-form {

  }

  .recomp-form-row {
    display: flex;
    padding-bottom: 8px;
    justify-content: space-between;
  }

  .recomp-form-row.row {
    flex-direction: column;
  }

  .recomp-form-row.column {
    flex-direction: row;
  }

  .recomp-form-row .recomp-label {
    min-width: 130px;
    padding-right: 20px;
    padding-bottom: 2px;
    align-self: flex-start;
    flex-grow: 0;
  }

  .recomp-form-row .recomp-field {
    min-width: 250px;
    flex-grow: 1;
    display: flex;
    
  }

  .recomp-form-row.column .recomp-field {
    align-self: flex-start;
    flex-direction: row;
    justify-content: flex-end;
  }

  .recomp-form-row.row .recomp-field {
    align-self: stretch;
    flex-grow: 1;
    flex-direction: row;
    justify-content: flex-start;
  }

  .recomp-form-row .recomp-input {
    flex-grow: 1;
  }

  .recomp-form-row .recomp-button {
    padding: 4px 8px;
    display: inline-block;
    line-height: normal;
    border-radius: 0px;
    height: auto;
  }

}