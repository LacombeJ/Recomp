recomp-quote() {

  .recomp-quote {
    color: rgb(160, 170, 180);
    background: rgba(30, 70, 100, 0.5);
    border-radius: 0.5em;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0.3rem;

    .container {
      display: flex;
      flex-direction: row;
      align-items: center;
      align-content: flex-start;
      justify-content: space-between;
    }

    .quote {
      font-weight: 100;
      font-size: 1.25rem;
      position: relative;
      padding: .5rem;
      margin: 0 3rem 0 3rem;
      min-width: 0.5em;
      min-height: 1.5em;
    }

    .quote:before,
    .quote:after {
      position: absolute;
      color: rgba(150, 160, 170, 0.5);
      font-size: 5rem;
      width: 3rem;
      height: 3rem;
    }

    .quote:before {
      content: '“';
      left: -2rem;
      top: -1.5rem;
    }

    .quote:after {
      content: '”';
      right: -3rem;
      bottom: 1.5rem;
    }
    
    .cite {
      font-size: 1rem;
      line-height: 2;
      text-align: left;
    }
  }

}