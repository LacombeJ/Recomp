@import '../common/colors';

recomp-block() {

  V0 = 60%; // desaturation value
  V1 = 50%; // darken value

  .recomp-block {
    margin: 4px 0px 4px 0px;
    padding: 4px 16px 4px 14px;
    &:not(.solid) {
      border-left: 4px solid rgba(RECOMP_PRIMARY, 1);
      background-color: rgba(0, 0, 0, 0.15);
      &.level-1 {
        border-color: RECOMP_LEVEL_1;
      }
      &.level-2 {
        border-color: RECOMP_LEVEL_2;
      }
      &.level-3 {
        border-color: RECOMP_LEVEL_3;
      }
      &.level-4 {
        border-color: RECOMP_LEVEL_4;
      }
    }

    &.solid {
      background-color: darken(desaturate(RECOMP_PRIMARY, V0), V1);
      border: 1px solid RECOMP_PRIMARY;
      &.level-1 {
        background-color: darken(desaturate(RECOMP_LEVEL_1, V0), V1);
        border-color: RECOMP_LEVEL_1;
      }
      &.level-2 {
        background-color: darken(desaturate(RECOMP_LEVEL_2, V0), V1);
        border-color: RECOMP_LEVEL_2;
      }
      &.level-3 {
        background-color: darken(desaturate(RECOMP_LEVEL_3, V0), V1);
        border-color: RECOMP_LEVEL_3;
      }
      &.level-4 {
        background-color: darken(desaturate(RECOMP_LEVEL_4, V0), V1);
        border-color: RECOMP_LEVEL_4;
      }
    }
  }

}