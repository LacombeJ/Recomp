@import '../common/colors';

recomp-tooltip() {

  TOOLTIP_BORDER = lighten(desaturate(RECOMP_PRIMARY, 50%), 15%);
  TOOLTIP_BACKGROUND = darken(desaturate(RECOMP_PRIMARY, 70%), 40%);

  .recomp-tooltip {
    position: relative;
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.75);
    background-color: TOOLTIP_BACKGROUND;
    border: 1px solid TOOLTIP_BORDER;
    border-radius: 2px;
    box-shadow: inset rgba(0, 0, 0, 0.0) 0 4px 8px, rgba(0, 0, 0, 0.0) 0px 4px 8px;
    padding: 4px 8px;
    display: inline-block;
    user-select: none;

    .body {
      display: inline-block;
      white-space: nowrap;
    }

    .triangle {
      position: absolute;
      display: flex;
      justify-content: center;
      align-items: center;

      .outline {
        position: absolute;
        color: TOOLTIP_BORDER;
      }

      .inner {
        position: absolute;
        color: TOOLTIP_BACKGROUND;
        transform: translateY(0.5px);
      }
    }
  }
}