@import '../common/colors';



recomp-button() {

  BACKGROUND_COLOR_TOP = lighten(RECOMP_PRIMARY, 10%);
  BACKGROUND_COLOR_BOT = RECOMP_PRIMARY;

  PLAIN_BACKGROUND = #a3a3a3;
  PLAIN_BORDER = #9ca5a4;

  WARN_BACKGROUND = #852c33;
  WARN_BORDER = #e44c4c;

  .recomp-button {
    color: rgba(255, 255, 255, 0.9);
    background-color: rgba(BACKGROUND_COLOR_BOT, 0.7);
    border: 1px solid #2A8387;

    border-radius: 2px;
    box-shadow: rgba(60, 80, 100, 0.2) 0px 1px 1px;
    cursor: pointer;
    display: inline-block;
    line-height: 1.5em;
    padding: 8px 16px;
    text-align: center;
    white-space: nowrap;
    transition: all .3s cubic-bezier(0.645, 0.045, 0.355, 1);
    user-select: none;
    touch-action: manipulation;

    &:hover {
      box-shadow: rgba(0, 0, 0, 0.9) 0px 4px 8px;
      background-color: rgba(BACKGROUND_COLOR_BOT, 0.8);
      border: 1px solid lighten(#2A8387, 20%);
    }

    &.plain {
      color: rgba(255, 255, 255, 0.9);
      background-color: rgba(PLAIN_BACKGROUND, 0.3);
      border: 1px solid PLAIN_BORDER;
      &:hover {
        background-color: rgba(PLAIN_BACKGROUND, 0.6);
        border: 1px solid lighten(PLAIN_BORDER, 20%);
      }
    }

    &.warn {
      color: rgba(255, 255, 255, 0.9);
      background-color: rgba(WARN_BACKGROUND, 0.7);
      border: 1px solid WARN_BORDER;
      &:hover {
        background-color: rgba(WARN_BACKGROUND, 0.8);
        border: 1px solid lighten(WARN_BORDER, 20%);
      }
    }

    &:active {
      box-shadow: rgba(0, 0, 0, 0.15) 0 2px 4px inset, rgba(0, 0, 0, 0.4) 0 1px 1px;
    }

    &:disabled {
      cursor: not-allowed;
      opacity: .6;
      &:active {
        pointer-events: none;
      }

      &:hover {
        box-shadow: none;
      }
    }
  }

}