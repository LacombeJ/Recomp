@import '../common/colors';

recomp-checkbox() {

  .recomp-checkbox {
    user-select: none;
    cursor: pointer;
    position: relative;

    CHECKBOX_COLOR = lighten(RECOMP_PRIMARY, 10%);

    & .label {
      margin-left: 1.5em;
    }

    & input {
      opacity: 0;
      position: absolute;
      height: 0;
      width: 0;
    }

    & .mark {
      position: absolute;
      height: 1em;
      width: 1em;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      background-color: transparent;
      border: 1px solid alpha(white, 0.3);
      border-radius: 3px;
      transition: all .3s cubic-bezier(0.645,0.045,0.355,1);
    }

    &:hover input:not(:checked) ~ .mark {
      border-color: CHECKBOX_COLOR;
    }

    &:hover input:checked ~ .mark {
      border-color: alpha(white, 0.3);
    }

    & .mark::after {
      content: "";
      position: absolute;
      display: block;
      width: 0%;
      height: 0%;
      border: solid white;
      border-width: 0px;
      BORDER_WIDTH = 0.15em;
      border-width: 0 0 0 0;
      transition: all .2s cubic-bezier(0.645,0.045,0.355,1);
      transform: translateX(0.475em) translateY(0.5em);
    }

    & input:checked ~ .mark {
      background-color: CHECKBOX_COLOR;
      border-color: transparent;
      &::after {
        MARK_WIDTH = 0.3em;
        MARK_HEIGHT = 0.6em;
        POST_Y = -(min(MARK_WIDTH, MARK_HEIGHT) / 4);
        width: MARK_WIDTH;
        height: MARK_HEIGHT;
        border-width: 0 0.15em 0.15em 0;
        transform: translateX((1 - MARK_WIDTH) / 2.3) translateY((1 - MARK_HEIGHT) / 3)  rotate(45deg) translateX(POST_Y) translateY(POST_Y);
      }
    }
    
  }

}