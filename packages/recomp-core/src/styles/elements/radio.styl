@import '../common/colors';

recomp-radio() {

  .recomp-radio {
    user-select: none;
    cursor: pointer;
    position: relative;
    
    RADIO_COLOR = lighten(RECOMP_PRIMARY, 25%);
    
    & .label {
      margin-left: 1.5em;
    }

    & input {
      opacity: 0;
      position: absolute;
      height: 0;
      width: 0;
    }

    & .mark {
      position: absolute;
      height: 1em;
      width: 1em;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      background-color: transparent;
      border: 1px solid alpha(white, 0.3);
      border-radius: 50%;
      transition: all .15s cubic-bezier(0.645,0.045,0.355,1);
    }

    &:hover input:not(:checked) ~ .mark {
      border-color: RADIO_COLOR;
    }

    & .mark::after {
      content: "";
      vertical-align: middle;
      position: absolute;
      display: block;
      border-radius: 50%;
      border-width: 0px;
      background: RADIO_COLOR;
      width: 0%;
      height: 0%;
      left: 50%;
      top: 50%;
      transform: translateX(0px) translateY(0px);
      transition: all .15s cubic-bezier(0.645,0.045,0.355,1);
    }

    & input:checked ~ .mark {
      background-color: transparent;;
      border-color: RADIO_COLOR;
      &::after {
        width: 50%;
        height: 50%;
        left: 25%;
        top: 25%;
        transform: translateX(-0.5px) translateY(0px);
      }
    }

}

}