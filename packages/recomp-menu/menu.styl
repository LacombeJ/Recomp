recomp-menu() {

  FONT_COLOR = rgb(180, 180, 180);
  BORDER_COLOR = rgb(65, 65, 65);
  BACKGROUND_COLOR = rgb(30, 30, 30);
  HOVER_COLOR = rgb(50, 50, 50);

  .recomp-menu {
    
    display: inline-block;
    box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.4);
    min-width: 200px;
    background-color: BACKGROUND_COLOR;
    padding: 8px 0 8px 0;
    border: 1px solid BORDER_COLOR;
    border-radius: 4px;

    .item {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      flex-grow: 1;
      
      flex-wrap: wrap;
      overflow: hidden;

      &:hover {
        background-color: HOVER_COLOR;
      }
    }

    .label {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 2px 30px 2px 30px;
    }

    .accelerator {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      flex-grow: 1;
      padding: 2px 30px 2px 30px;
    }

    .separator {
      separator-width = 4px;
      separator-margin = 12px;
      min-height: separator-width;
      border-bottom: 1px solid BORDER_COLOR;
      margin-bottom: separator-width;
      margin-left: 30px;
      margin-right: 6px;
    }

  }

}