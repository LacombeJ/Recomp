@import '../recomp-vogue/index.styl'

RECOMP_PRIMARY = hsl(182, 70%, 30%)

NEST_TEXT = rgb(210, 210, 210);
NEST_DIR_TEXT = rgb(230, 230, 230);
NEST_DIR_NOC = rgba(230, 230, 230, 0.7);
NEST_HOVER = rgba(RECOMP_PRIMARY, 0.5);
NEST_HOVER_NOS = rgba(desaturate(RECOMP_PRIMARY, 0.3), 0.3);

.recomp-folder {
  user-select: none;
  padding-bottom: 22px;
  .label {
    width: 100%;
    height: 22px;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    overflow: hidden;
    .edit {
      width: 100%;
      background-color: rgba(60, 60, 60, 0.7);
      color: alpha(white, 0.75);
      border-width: 0px;
      padding: 0px;
      margin: 1px;
      &:focus {
        outline: RECOMP_PRIMARY solid 1px;
      }
    }
  }
}

.recomp-folder .icon {
  width: 16px;
  min-width: 16px;
  padding-right: 8px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  flex-grow: 0;
  flex-wrap: nowrap;
  overflow: hidden;
}

.recomp-folder .text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  line-height: 22px;
}

.recomp-folder .nest {
  &:hover {
    background-color: NEST_HOVER;
  }
}

.recomp-folder .nest.directory {
  .text {
    color: NEST_DIR_TEXT;
  } 
}

.recomp-folder .nest.directory.nochild {
  .text {
    color: NEST_DIR_NOC;
  }
}

.recomp-folder .nest.selected:not(hover) {
  background-color: NEST_HOVER_NOS;
}

.recomp-folder .nest:not(directory) {
  .text {
    color: NEST_TEXT;
  }
}

.recomp-folder-shell {
  background-color: rgba(10, 10, 10, 0.5);
  padding: 8px;
  border-radius: 4px;
  vogue-shadow();

  .icon .lmx-folder-folder {
    color: #FFE792;
  }
  .icon .lmx-folder-file {
    color: #79C1EA;
  }
  .icon svg {
    width: 16px;
    height: 16px;
  }
}
