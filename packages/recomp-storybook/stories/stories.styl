@import '../../recomp-core/index.styl'
@import '../../recomp-monaco/index.styl'
@import '../../recomp-vogue/index.styl'

#root {
  vogue-global();
  vogue-scrollbar();
  color: alpha(white, 0.9);
}

.docs-story {
  vogue-global();
  color: alpha(white, 0.9);
}

recomp-init()

.bar-start {
  color: white;
  min-width: 100px;
  padding: 4px 4px;
  background-color: #946051;
}

.bar-center {
  color: white;
  width: 100%;
  padding: 4px 4px;
  background-color: #517094;
}

.bar-end {
  color: white;
  min-width: 100px;
  padding: 4px 4px;
  background-color: #6f9451;
}

.split-left {
  font-size: 40px;
  font-weight: 200;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  height: 300px;
  width: 100%;
  background-color: rgba(30, 0, 0, 0.5);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.split-right {
  font-size: 40px;
  font-weight: 200;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  height: 300px;
  width: 100%;
  background-color: rgba(0, 0, 30, 0.5);
}

.scrollpane {
  max-height: 300px;
  padding: 30px;
}

.scroll-container {
  max-height: 300px;
  padding: 30px;
}