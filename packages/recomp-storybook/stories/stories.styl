@import '../../recomp-core/index.styl'
@import '../../recomp-vogue/index.styl'
@import '../../recomp-monaco/monaco.styl'
@import '../../recomp-coast/coast.styl'
@import '../../recomp-edge/edge.styl'
@import '../../recomp-menu/menu.styl'

#root {
  vogue-global();
  color: alpha(white, 0.9);
}

.docs-story {
  vogue-global();
  color: alpha(white, 0.9);
}

recomp-init()
recomp-coast()
recomp-edge()
recomp-menu()

.bar-start {
  color: white;
  min-width: 100px;
  padding: 4px 4px;
  background-color: #946051;
}

.bar-center {
  color: white;
  width: 100%;
  padding: 4px 4px;
  background-color: #517094;
}

.bar-end {
  color: white;
  min-width: 100px;
  padding: 4px 4px;
  background-color: #6f9451;
}

split-panel() {
  font-size: 40px;
  font-weight: 200;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  width: 100%;
  height: 100%;
}

.split-left {
  split-panel();
  background-color: rgba(30, 0, 0, 0.5);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.split-right {
  split-panel();
  background-color: rgba(0, 0, 30, 0.5);
}

.split-top {
  split-panel();
  background-color: rgba(30, 0, 0, 0.5);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.split-bottom {
  split-panel();
  background-color: rgba(0, 0, 30, 0.5);
}


.scrollpane {
  max-height: 300px;
  padding: 30px;
}

.scroll-container {
  max-height: 300px;
  padding: 30px;
}

.right-template {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}