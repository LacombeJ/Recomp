// Input
// ------------------------------------

vogue-input-parent() {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-grow: 1;
}

vogue-input() {
  position: relative;
  display: grid;
  &:hover {
    background: rgba(#223254,.03);
  }
  flex-grow: 1;
}

vogue-input-label() {
  position: absolute;
  bottom: 8px;
  left: 0;
  font-size: 16px;
  color: #9098A9;
  font-weight: 500;
  transform-origin: 0 0;
  transition: all .2s ease;
  padding: 0;
  margin: 0;
}

vogue-input-border(_color=#0077FF) {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 1px;
  width: 100%;
  background _color;
  transform: scaleX(0);
  transform-origin: 0 0;
  transition: all .15s ease;
}

vogue-input-text() {
  -webkit-appearance: none;
  width: 100%;
  border: 0;
  font-family: inherit;
  padding: 20px 0 0px 0;
  height: 30px;
  font-size: 16px;
  border-bottom: 1px solid #C8CCD4;
  background: none;
  border-radius: 0;
  color: #ffffff;
  transition: all .15s ease;
}

vogue-input-placeholder(_label_selector) {
  &:not(:placeholder-shown) {
    + {_label_selector} {
      color #9a9a9a;
      transform: translateY(-20px) scale(.75);
    }
  }
}

vogue-input-focus(_label_selector, _border_selector, _color=#0077FF) {
  &:focus {
    background: none;
    outline: none;
    + {_label_selector} {
      color _color;
      transform: translateY(-20px) scale(.75);
      + {_border_selector} {
          transform: scaleX(1);
      }
    }
  }
}

vogue-input-selection(_test_selector, _color=#0077FF) {
  {_test_selector}::selection {
    background: _color;
  }
}

vogue-input-master(_label_selector, _border_selector, _text_selector, _color=#0077FF) {
  vogue-input();
  //transform: rotateX(45deg) rotateY(-10deg) rotate(25deg) scale(2)
  {_label_selector} {
    vogue-input-label();
  }
  {_border_selector} {
    vogue-input-border(_color);
  }
  {_text_selector} {
    vogue-input-text();
    vogue-input-placeholder(_label_selector);
    vogue-input-focus(_label_selector, _border_selector, _color);
  }
  vogue-input-selection(_text_selector, _color);
}

vogue-input-ellipsis() {
  font-size: 30px;
  color: #9098A9;
  display: inline-flex;
  position: absolute;
  flex-shrink: 0;

  &:hover {
    transform: scale(1.2);
  }
}