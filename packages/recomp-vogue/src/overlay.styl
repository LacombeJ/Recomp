// Overlay
// ------------------------------------

vogue-overlay-full(_color=rgba(0,0,0,0.5), _zindex=10) {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: _color;
  z-index: _zindex;
}

vogue-overlay-parent(_color=rgba(0,0,0,0.5), _zindex=10) {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0;
  right: 0;
  background-color: _color;
  z-index: _zindex;
}