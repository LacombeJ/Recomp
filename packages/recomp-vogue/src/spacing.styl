// Spacing
// ------------------------------------

// Padding mixins
vogue-padding-width(_padding) {
  padding-left: _padding;
  padding-right _padding;
}
vogue-padding-height(_padding) {
  padding-top: _padding;
  padding-bottom: _padding;
}
vogue-padding(_width, _height) {
  vogue-padding-width(_width);
  vogue-padding-height(_height);
}

// Margin mixins
vogue-margin-width(_margin) {
  margin-left: _margin;
  margin-right _margin;
}
vogue-margin-height(_margin) {
  margin-top: _margin;
  margin-bottom: _margin;
}
vogue-margin(_width, _height) {
  vogue-margin-width(_width);
  vogue-margin-height(_height);
}
