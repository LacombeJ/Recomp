// Neumo-box
VOGUE_NEUMO_BOX_DEFAULT_ARGUMENTS = {
  _offset: 7px,
  _blur: 18px,
  _direct: rgb(255, 255, 255),
  _ambient: rgb(55, 84, 170),
  _directAlpha: 1.0,
  _ambientAlpha: 0.30,
}
vogue-neumo-box(args=null) {
  args = vogue-merge-default(args, VOGUE_NEUMO_BOX_DEFAULT_ARGUMENTS);
  box-shadow: 
    inset 0 0 args._blur rgba(args._ambient, 0),
    inset 0 0 args._blur rgba(args._direct, 0),
    args._offset args._offset args._blur rgba(args._ambient, args._ambientAlpha),
    (-1*args._offset) (-1*args._offset) args._blur rgba(args._direct, args._directAlpha);
}

vogue-neumo-box-inset(args=null) {
  args = vogue-merge-default(args, VOGUE_NEUMO_BOX_DEFAULT_ARGUMENTS);
  box-shadow: 
      inset args._offset args._offset args._blur rgba(args._ambient, args._ambientAlpha),
      inset (-1*args._offset) (-1*args._offset) args._blur rgba(args._direct, args._directAlpha);
}
