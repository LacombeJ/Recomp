@import '../recomp-core/src/styles/common/colors.styl'

recomp-edge() {

  .recomp-edge {
    background-color: rgb(30, 30, 30, 0.3);
    display: inline-flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: stretch;
  }

  .recomp-edge .tabs {
    position: relative;
    display: inline-block;

    .tooltip {
      position: absolute;
      left: 100%;
    }

    .tooltip-offset {
      transform: translateX(10px);
    }

    .hint {
      position: absolute;
      width: 49px;
      height: 50px;
      border-left: 2px solid lighten(RECOMP_PRIMARY, 40%);
      pointer-events: none;
    }

    .bar {
      display: flex;
      flex-direction: column;
      display: inline-block;

      .tab {
        color: rgba(255, 255, 255, 0.8);
        user-select: none;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s, transform 0.1s;

        &:hover {
          color: lighten(RECOMP_PRIMARY, 50%);
        }

        &.active {
          color: white;
        }
      }
    }

  }

  .recomp-edge .controls {
    position: relative;
    display: inline-block;

    .tooltip {
      position: absolute;
      left: 100%;
    }

    .tooltip-offset {
      transform: translateX(10px);
    }

    .hint {
      position: absolute;
      width: 49px;
      height: 50px;
      border-left: 2px solid lighten(RECOMP_PRIMARY, 40%);
      pointer-events: none;
    }

    .bar {
      display: flex;
      flex-direction: column;
      display: inline-block;

      .control {
        color: rgba(255, 255, 255, 0.8);
        user-select: none;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s, transform 0.1s;

        &:hover {
          color: lighten(RECOMP_PRIMARY, 50%);
        }
      }
    }

  }

}