@import '../recomp-core/src/styles/common/colors.styl'
@import '../recomp-vogue/index.styl'

recomp-edge() {

  .recomp-edge {

    background-color: rgb(30, 30, 30);
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;

    padding: 4px 4px 12px 8px;

    // Need to apply to both parent and scroll container
    // (to work with both browsers)
    vogue-scrollbar({_width: 4px});
    
    .scrollable {
      overflow-y: scroll;
      vogue-scrollbar({_width: 4px});
    }

    // Draggable tab element (item & group)
    .tab {
      position: relative;
      box-shadow: rgba(0, 0, 0, 0.3) 0 0px 0px;
      
      display: flex;
      justify-content: flex-start;
      align-items: center;

      &.dragging {
        z-index: 1;
        box-shadow: rgba(0, 0, 0, 0.5) 0 4px 8px;
      }
    }

    // Tab item (standalone / within group)
    .item {
      color: rgba(255, 255, 255, 0.7);

      border: 1px solid transparent;
      border-left-width: 2px;
      margin: 6px 4px 6px 0px;
      padding: 4px 8px 4px 4px;
      min-width: 32px;
      height: 22px;
      border-radius: 2px;

      user-select: none;
      
      transition: border-color 0.3s, box-shadow 0.6s, border-color 0.3s;
      
      .icon {
        display: flex;
        margin-right: 4px;
        svg {
          width: 20px;
          height: 20px;
        }
      }

      &.dragging {
        background-color: rgb(50, 50, 50);
      }

      &.selected {
        border: 1px solid lighten(RECOMP_PRIMARY, 30%);
        border-left-width: 2px;
      }
    }

    &:not(.dragging) .tab.item:not(.selected) {
      &:hover {
        background-color: rgb(50, 50, 50);
      }
    }

    // Tab group
    .tab.group {
      
      display: flex;
      flex-direction: column;
      align-content: stretch;
      align-items: stretch;

      .head {
        color: rgba(0, 0, 0, 1);
        display: flex;
        flex-direction: row;
        min-width: 32px;
        height: 22px;

        border: 1px solid transparent;
        border-left-width: 2px;
        border-radius: 2px;
        margin: 6px 4px 6px 0px;
        padding: 4px 8px 4px 4px;
      }

      .body {
        background-color: rgb(30, 30, 30);
      }

      user-select: none;
      transition: border-color 0.3s, box-shadow 0.6s, border-color 0.3s;

      .icon {
        display: flex;
        margin-right: 4px;
        svg {
          width: 20px;
          height: 20px;
        }
      }

      &.dragging {
        box-shadow: rgba(0, 0, 0, 0.5) 0 4px 8px;
      }

      &.selected {
        border: 1px solid lighten(RECOMP_PRIMARY, 30%);
        border-left-width: 2px;
      }
    }

  }

}