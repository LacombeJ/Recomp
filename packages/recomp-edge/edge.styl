@import '../recomp-core/src/styles/common/colors.styl'

recomp-edge() {

  .recomp-edge {
    background-color: rgb(30, 30, 30);
    display: inline-flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: stretch;

    .tooltip {
      
    }

    &.right .tooltip {
      position: absolute;
      right: 100%;
    }
    &.left .tooltip {
      position: absolute;
      left: 100%;
    }

    &.right .tooltip-offset {
      transform: translateX(-10px);
    }
    &.left .tooltip-offset {
      transform: translateX(10px);
    }


    .hint {
      position: absolute;
      width: 49px;
      height: 50px;
      pointer-events: none;
    }
    &.right .hint {
      border-right: 2px solid lighten(RECOMP_PRIMARY, 40%);
    }
    &.left .hint {
      border-left: 2px solid lighten(RECOMP_PRIMARY, 40%);
    }

    .bar {
      display: flex;
      flex-direction: column;
      display: inline-block;
    }
    
    .tabs {
      position: relative;
      display: inline-block;

      .tab {
        color: rgba(255, 255, 255, 0.8);
        user-select: none;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s, transform 0.1s;

        &:hover {
          color: lighten(RECOMP_PRIMARY, 50%);
        }

        &.active {
          color: white;
        }
      }
    }

    .controls {
      position: relative;
      display: inline-block;

      .control {
        color: rgba(255, 255, 255, 0.8);
        user-select: none;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s, transform 0.1s;

        &:hover {
          color: lighten(RECOMP_PRIMARY, 50%);
        }
      }
    }

  }

}